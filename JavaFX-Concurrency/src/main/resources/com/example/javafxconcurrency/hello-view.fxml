<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.layout.*?>
<GridPane alignment="CENTER" xmlns:fx="http://javafx.com/fxml"
          fx:controller="com.example.javafxconcurrency.HelloController"

>

    <ListView GridPane.rowIndex="0" GridPane.columnIndex="0" GridPane.columnSpan="2" fx:id="listView">
    </ListView>
    <Button GridPane.columnIndex="0" GridPane.columnSpan="1" GridPane.rowIndex="1" text="Start" onAction="#handleStartTask"/>
    <Button GridPane.columnIndex="1" GridPane.columnSpan="1" GridPane.rowIndex="1" text="Cancel" onAction="#handleStopTask"/>
    <Label fx:id="progressLabel" text="Waiting to Fetch" GridPane.rowIndex="2" GridPane.columnIndex="0" GridPane.columnSpan="2"/>
    <ProgressBar fx:id="progressBar" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.rowIndex="3"/>
</GridPane>
